<div class="shadow py-3 px-5 border border-gray-100 rounded">
  <div class="px-4 sm:px-0 flex justify-between">
    <h3 class="text-base font-semibold leading-7 text-gray-900"><%= @record.title %></h3>

    <div data-controller="toggle" class="relative inline-block text-left">
      <div>
        <button
          data-action="toggle#toggle"
          type="button"
          class="
            -mr-3 flex items-center text-gray-400 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-jade-500 focus:ring-offset-2
            focus:ring-offset-gray-100
          "
          id="menu-button"
          aria-expanded="true"
          aria-haspopup="true"
        >
          <span class="sr-only">Open options</span>
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M10 3a1.5 1.5 0 110 3 1.5 1.5 0 010-3zM10 8.5a1.5 1.5 0 110 3 1.5 1.5 0 010-3zM11.5 15.5a1.5 1.5 0 10-3 0 1.5 1.5 0 003 0z"/>
          </svg>
        </button>
      </div>

      <div
        data-toggle-target="toggleable"
        class="
          hidden absolute right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none
        "
        role="menu"
        aria-orientation="vertical"
        aria-labelledby="menu-button"
        tabindex="-1"
      >
        <div class="py-1" role="none">
          <%= link_to "Edit", [:edit, @namespace, @record].flatten, class: "block text-gray-700 block px-4 py-2 text-sm hover:bg-jade-50" %>
          <%= button_to(
            "Delete",
            [@namespace, @record].flatten,
            method: :delete,
            class: "block w-full text-left text-gray-700 block px-4 py-2 text-sm hover:bg-jade-50",
            "data-controller": "confirm",
            "data-confirm-message-value": "Are you sure you want to delete this record? This action cannot be undone.",
            "data-action": "confirmation#confirm",
          ) %>
        </div>
      </div>
    </div>

  </div>
  <div class="mt-6 border-t border-gray-100">
    <dl class="divide-y divide-gray-100">
      <%= content %>
    </dl>
    <div class="flex space-x-2 border-t border-gray-200 pt-5">
      <%= link_to [:edit, @namespace, @record].flatten, class: "text-sm font-medium border border-gray-200 rounded px-4 py-1.5 flex items-center space-x-1 text-jade-700 hover:bg-jade-700 hover:text-white hover:border-jade-800" do %>
        <svg
          class="h-5"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"
          />
        </svg>
        <div>Edit</div>
      <% end %>
      <%= button_to(
        [@namespace, @record].flatten,
        method: :delete,
        class: "border border-gray-200 rounded px-4 py-1.5 flex items-center space-x-1 text-red-500 text-sm font-medium hover:text-white hover:bg-red-500 hover:border-red-600",
        "data-controller": "confirm",
        "data-confirm-message-value": "Are you sure you want to delete this record? This action cannot be undone.",
        "data-action": "confirmation#confirm",
      ) do %>
        <svg
          class="h-5"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-6 h-6"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"/>
        </svg>
        <div>Delete</div>
      <% end %>
    </div>
  </div>
</div>
