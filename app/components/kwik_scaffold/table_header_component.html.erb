<tr>
  <% @columns.each_with_index do |col, idx| %>
    <th scope="col" class="px-3 <%= idx == 0 ? "pl-4 sm:pl-6 pr-3" : "px-3" %> py-3.5 text-left text-sm font-semibold text-jade-900">
      <%if col[:sort] %>
        <%= link_to col[:label], "#sort" %>
      <% else %>
        <%= col[:label] %>
      <% end %>
          
    </th>
  <% end %>

  <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
    <span class="sr-only">Actions</span>
  </th>

</tr>
