<tr id="row_<%= dom_id(@record) %>" class="<%= @cycle %> hover:bg-jade-50">
  <% @columns.each_with_index do |col, idx| %>
    <% if idx == 0 %>
      <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-jade-900 sm:pl-6">
        <%= link_to col[:value], @namespace, "data-turbo": false %>
      </td>
    <% else %>
      <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= col[:value] %></td>
    <% end %>
  <% end %>

  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6 flex flex-row-reverse gap-3">

    <%= button_to @namespace, { class: "text-red-500 hover:text-red-600 flex gap-1 items-center hoverable",  method: :delete, data: { action: "confirmation#confirm", "confirmation-message-param": "This action is irreversible, are you sure?" } } do %>
      <svg
        class="h-5"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12"/>
      </svg>

    <% end %>

    <%= link_to [:edit] + @namespace, class: "text-jade-800 hover:text-jade-800 flex gap-1 items-center hoverable", "data-turbo": false do %>
      <svg
        class="h-5"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"
        />
      </svg>
    <% end %>

    <%= link_to @namespace, class: "text-jade-800 hover:text-jade-800 flex gap-1 items-center hoverable", "data-turbo": false do %>
      <svg
        class="h-5"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"/>
      </svg>
    <% end %>

  </td>
</tr>
